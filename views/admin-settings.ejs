<!doctype html>
<html lang="en">
<head>
<meta charset="utf-8" />
<meta name="viewport" content="width=device-width,initial-scale=1" />
<title>Admin Settings</title>

<link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;600;700&display=swap" rel="stylesheet">

<style>
:root{--bg:#f6f7fb;--card:#fff;--muted:#687182;--accent:#FFD700;--dark:#0b1220}
*{box-sizing:border-box}
body{font-family:Poppins;margin:0;background:var(--bg);color:var(--dark)}
.app{display:flex;min-height:100vh}

/* Sidebar */
.sidebar{
  width:260px;background:#0f1724;color:#fff;padding:22px 18px;
  display:flex;flex-direction:column;gap:18px;transition:.3s ease;
}
.brand{display:flex;align-items:center;gap:12px}
.brand img{width:44px;height:44px;border-radius:8px}
.nav{display:flex;flex-direction:column;gap:8px;margin-top:12px}
.nav a{
  color:#c9d2df;text-decoration:none;padding:10px;border-radius:8px;
  display:flex;align-items:center;gap:10px;
}
.nav a.active,.nav a:hover{background:rgba(255,215,0,0.12);color:#FFD700}

/* Main */
.main{flex:1;padding:20px}

/* Cards */
.card{
  background:var(--card);padding:22px;border-radius:14px;
  box-shadow:0 6px 18px rgba(11,17,32,0.04);margin-bottom:20px;
}
input,button{
  padding:12px;border-radius:12px;border:1px solid #ddd;width:100%;margin-top:8px;
}
button{
  background:var(--accent);border:none;font-weight:600;cursor:pointer;margin-top:16px;
}

/* Mobile top bar */
.mobile-bar{
  display:none;align-items:center;justify-content:space-between;
  background:#fff;padding:14px 16px;border-bottom:1px solid #eee;
}
.mobile-bar button{
  font-size:24px;background:none;border:none;cursor:pointer;
}

/* Overlay */
.overlay{
  position:fixed;inset:0;background:rgba(0,0,0,.4);
  display:none;z-index:98;
}
.overlay.show{display:block}

/* Responsive */
@media(max-width:900px){
  .mobile-bar{display:flex}

  .sidebar{
    position:fixed;
    top:0;left:-100%;
    height:100vh;
    z-index:99;
  }
  .sidebar.show{left:0}
}
</style>
</head>

<body>

<!-- MOBILE TOP BAR -->
<div class="mobile-bar">
  <button id="menuBtn">‚ò∞</button>
  <strong>Admin Settings</strong>
</div>

<div class="overlay" id="overlay"></div>

<div class="app">

<!-- SIDEBAR -->
<aside class="sidebar" id="sidebar">
  <a class="brand">
    <img src="/image/pic11.png">
    <div>
      <div style="font-weight:700">E.BAZAR Admin</div>
      <div style="font-size:12px;color:#9aa6b8;">manage everything</div>
    </div>
  </a>

  <nav class="nav">
    <a href="/admin/dashboard">üè† Dashboard</a>
    <a href="/admin/products">üì¶ Products</a>
    <a href="/admin/add-product">‚ûï Add Product</a>
    <a href="/admin/orders">üßæ Orders</a>
    <a href="/admin/users">üë• Users</a>
    <a href="/admin/categories">üìÇ Categories</a>
    <a href="/admin/settings" class="active">‚öôÔ∏è Settings</a>
  </nav>

  <div style="margin-top:auto;font-size:13px;color:#9aa6b8">
    Logged in as <strong><%= user.fullName %></strong><br>
    <a href="/logout" style="color:#FFD700">Logout</a>
  </div>
</aside>

<!-- MAIN -->
<main class="main">
  <h1 style="font-size:24px;margin-bottom:20px">‚öôÔ∏è Admin Settings</h1>

  <div class="card">
    <h2>Admin Account</h2>
    <form>
      <label>Email</label>
      <input value="<%= user.email %>" readonly>
      <small style="color:#888;">Admin email cannot be changed</small>
    </form>
  </div>

  <div class="card">
    <h2>Change Password</h2>
    <form action="/admin/settings/password" method="POST">
      <label>New Password</label>
      <input type="password" name="newPassword" required>

      <label>Confirm Password</label>
      <input type="password" name="confirmPassword" required>

      <button>Update Password</button>
    </form>
  </div>
</main>

</div>

<!-- JS -->
<script>
const menuBtn = document.getElementById("menuBtn");
const sidebar = document.getElementById("sidebar");
const overlay = document.getElementById("overlay");

menuBtn.onclick = () => {
  sidebar.classList.add("show");
  overlay.classList.add("show");
}

overlay.onclick = () => {
  sidebar.classList.remove("show");
  overlay.classList.remove("show");
}
</script>

</body>
</html>
