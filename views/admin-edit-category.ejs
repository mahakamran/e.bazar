<!DOCTYPE html>
<html lang="en">
<head>
<meta charset="UTF-8">
<meta name="viewport" content="width=device-width, initial-scale=1" />
<title>Edit Category</title>

<link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;600&display=swap" rel="stylesheet">

<style>
body{font-family:Poppins;background:#f6f7fb;margin:0}
.app{display:flex;min-height:100vh}

/* SIDEBAR */
.sidebar{
  width:260px;
  background:#0f1724;
  color:#fff;
  padding:22px 18px;
  display:flex;
  flex-direction:column;
  gap:18px;
  transition:.3s ease;
}
.brand{display:flex;gap:12px;align-items:center}
.brand img{width:44px;height:44px;border-radius:8px}

.nav a{
  padding:10px;
  text-decoration:none;
  color:#c9d2df;
  border-radius:8px;
  display:flex;
  gap:10px;
}
.nav a.active,.nav a:hover{
  background:rgba(255,215,0,0.12);
  color:#FFD700;
}

/* MAIN */
.main{flex:1;padding:20px}

/* MOBILE BAR */
.mobile-bar{
  display:none;
  justify-content:space-between;
  align-items:center;
  background:#fff;
  padding:12px 16px;
  border-bottom:1px solid #eee;
}
.mobile-bar button{
  font-size:24px;
  background:none;
  border:none;
  cursor:pointer;
}

.overlay{
  position:fixed;
  inset:0;
  background:rgba(0,0,0,.4);
  display:none;
  z-index:98;
}
.overlay.show{display:block}

.card{
  background:#fff;
  padding:20px;
  border-radius:12px;
  max-width:500px;
  margin:auto;
  box-shadow:0 2px 12px rgba(0,0,0,0.05)
}

input{
  padding:12px;
  width:100%;
  border-radius:10px;
  border:1px solid #ccc;
  font-size:15px;
}
.btn{
  padding:10px 20px;
  background:#0f1724;
  color:#fff;
  border:none;
  border-radius:10px;
  cursor:pointer;
  margin-top:10px;
}

/* RESPONSIVE */
@media(max-width:900px){
  .mobile-bar{display:flex}

  .sidebar{
    position:fixed;
    left:-100%;
    top:0;
    height:100vh;
    z-index:99;
  }
  .sidebar.show{left:0}
  #inp{
    margin-left: -13px;
  }
}
#inp{
    margin-left: -15px;
}
</style>
</head>

<body>

<!-- MOBILE BAR -->
<div class="mobile-bar">
  <button id="menuBtn">‚ò∞</button>
  <span>Admin Panel</span>
</div>

<div class="overlay" id="overlay"></div>

<div class="app">

<!-- SIDEBAR -->
<aside class="sidebar" id="sidebar">
  <a class="brand">
    <img src="/image/logo.png">
    <div>
      <div style="font-weight:700">E.BAZAR Admin</div>
      <div style="font-size:12px;color:#9aa6b8;">edit category</div>
    </div>
  </a>

  <nav class="nav">
    <a href="/admin/dashboard">üè† Dashboard</a>
    <a href="/admin/products">üì¶ Products</a>
    <a href="/admin/add-product">‚ûï Add Product</a>
    <a href="/admin/orders">üßæ Orders</a>
    <a href="/admin/users">üë• Users</a>
    <a href="/admin/categories" class="active">üìÇ Categories</a>
    <a href="/admin/settings">‚öôÔ∏è Settings</a>
  </nav>
</aside>

<!-- MAIN -->
<main class="main">
  <div class="card">
    <h2>Edit Category</h2>
    <form action="/admin/categories/edit/<%= category._id %>" method="POST">
      <input type="text" name="name" value="<%= category.name %>" required id="inp">
      <button class="btn">Update</button>
    </form>
  </div>
</main>

</div>

<!-- JS -->
<script>
const menuBtn = document.getElementById("menuBtn");
const sidebar = document.getElementById("sidebar");
const overlay = document.getElementById("overlay");

menuBtn.onclick = () => {
  sidebar.classList.add("show");
  overlay.classList.add("show");
};

overlay.onclick = () => {
  sidebar.classList.remove("show");
  overlay.classList.remove("show");
};
</script>

</body>
</html>
